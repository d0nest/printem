{
   "compilerOptions": {
      "lib": [
         "ESNext",
      ],
      "target": "ESNext",
      "module": "ESNext",
      "moduleResolution": "node",
      "rootDir": "./src",
      "outDir": "build",
      "emitDecoratorMetadata": true,
      "experimentalDecorators": true,
      "sourceMap": true,
      "plugins": [{"transform": "typescript-transform-paths"},
         {
            "transform": "typescript-transform-paths",
            "afterDeclarations": true
         }]
   }
}